if [ ! -d "$XDG_CONFIG_HOME/zsh/zinit" ]; then
    git clone https://github.com/zdharma-continuum/zinit.git /$XDG_CONFIG_HOME/zsh/zinit/bin 2>/dev/null
fi

declare -A ZINIT
ZINIT[HOME_DIR]="$XDG_CONFIG_HOME/zsh/zinit"

source "$XDG_CONFIG_HOME/zsh/zinit/bin/zinit.zsh"
autoload -Uz _zinit
(( ${+_comps} )) && _comps[zinit]=_zinit

export PATH=$ZINIT[HOME_DIR]/plugins/ajeetdsouza---zoxide/zoxide-x86_64-unknown-linux-musl:$PATH
zinit ice lucid wait'0' from"gh-r" as"program" mv"target/*/release/zoxide -> zoxide" \
    atload'eval "$(zoxide init zsh)"'
zinit light ajeetdsouza/zoxide

#zinit ice atclone"dircolors -b LS_COLORS > clrs.zsh" \
#    atpull'%atclone' pick"clrs.zsh" nocompile'!' \
#    atload'zstyle ":completion:*" list-colors “${(s.:.)LS_COLORS}”'
#zinit light trapd00r/LS_COLORS

zinit ice depth=1
zinit light romkatv/powerlevel10k

zinit ice lucid wait'0' depth=1
zinit light-mode for \
    Aloxaf/fzf-tab \
    zdharma-continuum/fast-syntax-highlighting \
    zsh-users/zsh-completions \
    zsh-users/zsh-autosuggestions \
    joshskidmore/zsh-fzf-history-search

if [ -f "$HOME/.local/share/broot/launcher/bash/1" ]; then
 source $HOME/.local/share/broot/launcher/bash/1
fi
